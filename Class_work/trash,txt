        function RESULT() {

	x = prompt('Enter x ');
    y = prompt('Enter y ');

  if (isNaN(x && y)) {
    return 'Not a Number!';
  }
  else if(!isNaN(y && x)) {
    return +x + +y;
  }
  return 'Not a number too'; //
}

console.log(RESULT());






function myFunction() {
  var y = document.getElementById("txt1").value;
  var z = document.getElementById("txt2").value;
  var spit = +y + +z;
  document.getElementById("ress").innerHTML = spit;
}





        function RESULT() {
          

	x = prompt('Enter x ');
    y = prompt('Enter y ');

  if (isNaN(x) && isNaN(y)) {
    return x + y; // CHAR + CHAR
  }
  else if(!isNaN(x) && !isNaN(y)) { // this one add
    return +x + +y; 
  }
  else if(!isNaN(x) && isNaN(y)) { // num + char
    return 'Not compaitible__';
  }
  else if(isNaN(x) && !isNaN(y)) { // char + num
    return 'Not compaitible';
  }         
  return 'Just hanging'; // JK
}

console.log(RESULT());
// expected output: "Not a Number!"

